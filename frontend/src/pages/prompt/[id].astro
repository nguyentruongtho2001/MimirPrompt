---
// Prompt Detail - Neo-Brutalism Guideline with SEO
import PublicLayout from "../../layouts/PublicLayout.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import { pb } from "../../lib/pb";

const { id } = Astro.params;

let prompt = null;
let error = null;

try {
  if (id) {
    prompt = await pb.collection('prompts').getOne(id, {
      expand: 'tags,category,author'
    });
    
    // Note: view_count update removed - requires admin/superuser permission
    // To enable, update PocketBase API rules for prompts collection
  } else {
      error = "ID kh√¥ng h·ª£p l·ªá";
  }
} catch (e) {
  error = "Kh√¥ng t√¨m th·∫•y prompt n√†y.";
}

const images = prompt?.images_list?.length > 0 ? prompt.images_list : (prompt?.thumbnail ? [prompt.thumbnail] : []);
const tagColors = ['var(--tag-blue)', 'var(--tag-pink)', 'var(--tag-mint)', 'var(--tag-yellow)', 'var(--tag-lavender)'];

// SEO meta data
const seoTitle = prompt?.title || "Chi ti·∫øt Prompt";
const seoDescription = prompt?.prompt_text?.substring(0, 160) || "AI Prompt chi ti·∫øt";
const seoImage = images[0];

// Handle relations from PocketBase expand
const category = prompt?.expand?.category;
const tags = prompt?.expand?.tags || [];
const author = prompt?.expand?.author;

// Breadcrumb items
const breadcrumbItems = prompt ? [
  { name: category?.name || "Prompts", href: `/tags/${category?.slug || ""}` },
  { name: prompt.title.length > 40 ? prompt.title.substring(0, 40) + "..." : prompt.title }
] : [];
---

<PublicLayout 
  title={seoTitle} 
  description={seoDescription}
  image={seoImage}
  type="article"
>
  <div class="container detail-page">
    {error ? (
      <div class="error-state">
        <span class="error-icon">üòï</span>
        <h2>{error}</h2>
        <a href="/" class="btn btn-primary">‚Üê V·ªÅ trang ch·ªß</a>
      </div>
    ) : prompt && (
      <>
        <Breadcrumb items={breadcrumbItems} />

        <div class="detail-grid">
          <!-- Image -->
          <div class="image-section">
            <div class="main-image">
              <img src={images[0]} alt={prompt.title} id="mainImage" loading="lazy" decoding="async" />
            </div>
            
            {images.length > 1 && (
              <div class="thumbs">
                {images.map((img: string, i: number) => (
                  <button class:list={["thumb", { active: i === 0 }]} data-image={img}>
                    <img src={img} alt="" loading="lazy" decoding="async" />
                  </button>
                ))}
              </div>
            )}
          </div>

          <!-- Info -->
          <div class="info-section">
            <h1 class="prompt-title">{prompt.title}</h1>
            
            <div class="meta-row">
              {author && (
                <div class="author-card-small">
                  <img src={author.avatar_url || `https://ui-avatars.com/api/?name=${author.name}&background=random`} alt={author.name} class="author-avatar" />
                  <div class="author-info">
                    <span class="author-label">Author</span>
                    <span class="author-name">{author.name}</span>
                  </div>
                </div>
              )}
              
              <div class="meta-item">
                 <span class="meta-label">Views</span>
                 <span class="meta-value">{prompt.view_count}</span>
              </div>
            </div>

            {tags.length > 0 && (
              <div class="tags">
                {tags.map((tag: any, i: number) => (
                  <a href={`/tags/${tag.slug}`} class="tag" style={`background: ${tagColors[i % tagColors.length]}`}>
                    {tag.name}
                  </a>
                ))}
              </div>
            )}

            <!-- Prompt Box -->
            <div class="prompt-box">
              <div class="prompt-header">
                <span>üìù Prompt</span>
                <button class="copy-btn" id="copyBtn">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="9" y="9" width="13" height="13" rx="2"></rect>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                  </svg>
                  <span class="copy-text">Copy</span>
                </button>
              </div>
              <div class="prompt-content">
                <pre id="promptText">{prompt.prompt_text}</pre>
              </div>
            </div>

            <!-- Meta Footer -->
            <div class="meta">
              {prompt.source_url && (
                <a href={prompt.source_url} target="_blank" class="btn btn-sm">Xem ngu·ªìn ‚Üí</a>
              )}
            </div>
          </div>
        </div>
      </>
    )}
  </div>
</PublicLayout>

<style>
  .detail-page {
    padding: var(--space-xl) 0 var(--space-3xl);
  }
  
  .meta-row {
    display: flex;
    align-items: center;
    gap: var(--space-xl);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-lg);
    border-bottom: var(--border);
  }

  .author-card-small {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .author-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    background: var(--bg-secondary);
  }

  .author-info {
    display: flex;
    flex-direction: column;
  }

  .author-label {
    font-size: 0.65rem;
    text-transform: uppercase;
    color: var(--text-muted);
    font-weight: 600;
  }

  .author-name {
    font-weight: 600;
    font-size: 0.95rem;
  }

  .back-link {
    display: inline-flex;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
  }

  .back-link:hover {
    color: var(--accent-primary);
  }

  .error-state {
    text-align: center;
    padding: var(--space-3xl);
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
  }

  .error-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--space-md);
  }

  /* Grid */
  .detail-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-xl);
    align-items: start;
  }

  /* Image */
  .image-section {
    position: sticky;
    top: 80px;
  }

  .main-image {
    background: white;
    border: var(--border);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    margin-bottom: var(--space-sm);
  }

  .main-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .thumbs {
    display: flex;
    gap: 8px;
    overflow-x: auto;
  }

  .thumb {
    flex-shrink: 0;
    width: 72px;
    height: 54px;
    padding: 0;
    border: 2px solid var(--bg-secondary);
    border-radius: var(--radius-md);
    cursor: pointer;
    overflow: hidden;
    transition: var(--transition-fast);
    background: none;
  }

  .thumb:hover, .thumb.active {
    border-color: var(--accent-primary);
  }

  .thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Info */
  .prompt-title {
    font-size: 1.5rem;
    line-height: 1.3;
    margin-bottom: var(--space-md);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: var(--space-lg);
  }

  .tags .tag {
    text-decoration: none;
    transition: var(--transition-fast);
  }

  .tags .tag:hover {
    transform: translateY(-1px);
  }

  /* Prompt Box */
  .prompt-box {
    background: white;
    border: var(--border);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    margin-bottom: var(--space-lg);
  }

  [data-theme="dark"] .prompt-box {
    background: var(--bg-secondary);
  }

  .prompt-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    background: var(--bg-secondary);
    border-bottom: var(--border);
    font-weight: 600;
    font-size: 0.875rem;
  }

  [data-theme="dark"] .prompt-header {
    background: rgba(255, 255, 255, 0.05);
  }

  .copy-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: var(--accent-primary);
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-fast);
  }

  .copy-btn:hover {
    background: var(--accent-primary-hover);
  }

  .copy-btn.copied {
    background: var(--success);
  }

  .prompt-content {
    padding: var(--space-md);
    max-height: 350px;
    overflow-y: auto;
  }

  .prompt-content pre {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.7;
    white-space: pre-wrap;
    word-break: break-word;
    margin: 0;
  }

  /* Meta */
  .meta {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .meta-label {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
  }

  .meta-value {
    font-size: 1.25rem;
    font-weight: 700;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .detail-grid {
      grid-template-columns: 1fr;
    }

    .image-section {
      position: static;
    }
  }
</style>

<script>
  document.getElementById('copyBtn')?.addEventListener('click', async () => {
    const btn = document.getElementById('copyBtn');
    const text = document.getElementById('promptText')?.textContent || '';
    
    try {
      await navigator.clipboard.writeText(text);
      btn?.classList.add('copied');
      const copyText = btn?.querySelector('.copy-text');
      if (copyText) copyText.textContent = 'Copied!';
      setTimeout(() => {
        btn?.classList.remove('copied');
        if (copyText) copyText.textContent = 'Copy';
      }, 2000);
    } catch (err) {}
  });

  document.querySelectorAll('.thumb').forEach(thumb => {
    thumb.addEventListener('click', () => {
      const img = thumb.getAttribute('data-image');
      const mainImg = document.querySelector('#mainImage') as HTMLImageElement;
      if (mainImg && img) mainImg.src = img;
      document.querySelectorAll('.thumb').forEach(t => t.classList.remove('active'));
      thumb.classList.add('active');
    });
  });
</script>
