---
// Public Layout - Neo-Brutalism (Light Only)
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
    image?: string;
    type?: "website" | "article";
    canonical?: string;
}

const {
    title,
    description = "Khám phá bộ sưu tập AI Prompts được tuyển chọn cho Nano Banana",
    image = "/og-default.jpg",
    type = "website",
    canonical,
} = Astro.props;

const SITE_URL = "http://localhost:4321";
const API_URL = "http://localhost:2992";
const fullTitle = `${title} | MimirPrompt`;
const imageUrl = image.startsWith("http") ? image : `${SITE_URL}${image}`;
const canonicalUrl = canonical || Astro.url.href;
---

<!doctype html>
<html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{fullTitle}</title>

        <!-- Canonical -->
        <link rel="canonical" href={canonicalUrl} />

        <!-- Open Graph -->
        <meta property="og:title" content={fullTitle} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={imageUrl} />
        <meta property="og:type" content={type} />
        <meta property="og:url" content={canonicalUrl} />
        <meta property="og:site_name" content="MimirPrompt" />
        <meta property="og:locale" content="vi_VN" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={fullTitle} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={imageUrl} />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <!-- Header (Fixed) -->
        <header class="header">
            <div class="container header-inner">
                <a href="/" class="logo">
                    <span class="logo-text">MimirPrompt</span>
                </a>

                <nav class="nav">
                    <a href="/tags" class="nav-link">Tags</a>
                </nav>
            </div>
        </header>

        <!-- Main -->
        <main class="main">
            <slot />
        </main>

        <!-- Footer -->
        <footer class="footer">
            <div class="container footer-inner">
                <span class="footer-brand">MimirPrompt</span>
                <p class="footer-text">AI Prompt Gallery · Made with care</p>
            </div>
        </footer>

        <style>
            /* Header */
            .header {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                width: 100%;
                z-index: 1000;
                background: white;
                border-bottom: 2px solid #1a1a1a;
            }

            .header-inner {
                display: flex;
                align-items: center;
                justify-content: space-between;
                height: 64px;
            }

            .logo {
                display: flex;
                align-items: center;
                gap: 8px;
                color: #1a1a1a;
                text-decoration: none;
            }

            .logo:hover {
                text-decoration: none;
            }

            .logo-icon {
                font-size: 1.5rem;
            }

            .logo-text {
                font-family: var(--font-display);
                font-size: 1.25rem;
                font-weight: 700;
            }

            .nav {
                display: flex;
                align-items: center;
                gap: 4px;
            }

            .nav-link {
                padding: 8px 16px;
                font-size: 0.875rem;
                font-weight: 500;
                color: #1a1a1a;
                border-radius: 4px;
                transition: 0.15s ease;
            }

            .nav-link:hover {
                background: #f5f5f0;
                text-decoration: none;
            }

            /* Main */
            .main {
                min-height: calc(100vh - 64px - 120px);
                padding-top: 64px;
            }

            /* Footer */
            .footer {
                background: #1a1a1a;
                color: white;
                padding: 48px 0;
                margin-top: 64px;
            }

            .footer-inner {
                text-align: center;
            }

            .footer-brand {
                display: block;
                font-family: var(--font-display);
                font-size: 1.125rem;
                font-weight: 700;
                margin-bottom: 8px;
            }

            .footer-text {
                color: rgba(255, 255, 255, 0.6);
                font-size: 0.875rem;
            }

            /* Responsive */
            @media (max-width: 768px) {
                .nav {
                    display: none;
                }

                .header-inner {
                    height: 56px;
                }

                .main {
                    padding-top: 56px;
                }
            }
        </style>

        <script define:vars={{ API_URL }}>
            window.API_URL = API_URL;
        </script>
    </body>
</html>
